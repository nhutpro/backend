{{!-- Head session --}}
{{#section 'head'}}
<title>13 Team</title>
{{/section}}

<link rel="stylesheet" href="/css/userinfo.css" />
<div class="userinfo__container">
	<div class="userinfo">
		<form class="userinfo-form">
			<h2>Thông Tin Người Dùng</h2>
			<div class="form-group">
				<div class="form-row">
					<input type="text" id="userinfo-name" name="username" value="{{user.name}}" placeholder="Tên người dùng" />
					<label for="userinfo-name">Họ Và Tên </label>
				</div>
				<p class="error-message"></p>
			</div>

			<div class="form-group">
				<div class="form-row">
					<input type="text" name="email" id="userinfo-email" value="{{user.email}}" placeholder=" " />
					<label for="userinfo-email">Email </label>
				</div>
				<p class="error-message"></p>
			</div>

			<div class="form-group">
				<div class="form-row">
					<input type="text" name="phone" id="userinfo-phone" value="{{user.phone}}" placeholder=" " />
					<label for="userinfo-phone">Số Điện Thoại</label>
				</div>
				<p class="error-message"></p>
			</div>

			<div class="form-group">
				<div class="form-row">
					<div id="userinfo-gender" data="{{user.gender}}">
						<div class="gender__option">
							<input type="radio" id="gender-male" name="gender" value="Nam" />
							<label for="gender-male">Nam</label>
						</div>

						<div class="gender__option">
							<input type="radio" id="gender-female" name="gender" value="Nữ" />
							<label for="gender-female">Nữ</label>
						</div>

						<div class="gender__option">
							<input type="radio" id="gender-LGBT" name="gender" value="Khác" />
							<label for="gender-LGBT">Khác</label>
						</div>

					</div>

					<label for="userinfo-gender">Giới Tính</label>
				</div>
				<p class="error-message"></p>
			</div>

			<div class="form-group">
				<div class="form-row row-birthday">
					<input type="date" id="user-birthday" name="birthday" value="{{user.birthday}}" min="1997-01-01"
						max="2030-12-31" />
					<label for="user-birthday">Ngày Sinh</label>
				</div>
				<p class="error-message"></p>
			</div>

			<div class="form-group">
				<div class="form-row row-address">
					<div id="userinfo-address">
						<div class="address-overall">
							<select id="address__province" name="address__province" data="{{user.address.province}}">
								<option value="">Tỉnh / Thành Phố</option>
								{{#each province}}
								<option value="{{this.name}}">{{this.name}}</option>
								{{/each}}
							</select>

							<select id="address__district" name="address__district" data="{{user.address.district}}" disabled>
								<option value="" id="district__default">Quận / Huyện</option>
								{{#each district}}
								<option value="{{this.name}}">{{this.name}}</option>
								{{/each}}
							</select>
							<select id="address__ward" name="address__ward" data="{{user.address.ward}}" disabled>
								<option value="" id="ward__default">Phường / Xã</option>
								{{#each ward}}
								<option value="{{this.name}}">{{this.name}}</option>
								{{/each}}
							</select>
						</div>
						<div>
							<input id="address__detail" name="address__detail" type="text"
								placeholder="Địa chỉ cụ thể ví dụ: 31 QL 13" value="{{user.address.addressdetail}}" disabled />
						</div>
					</div>

					<label for="userinfo-address">Địa chỉ</label>
				</div>
				<p class="error-message"></p>
			</div>
			<input type="submit" value="Cập Nhật" />
		</form>
	</div>

	<script src="/js/validator.js">

	</script>
	<script src="/js/userinfo.js">

	</script>

</div>